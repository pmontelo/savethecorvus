** BIO - BLOCK I/O TEST************************************************************************** ProDOS commands************************************************************************pcmdStatus equ $0pcmdRead equ $1pcmdWrite equ $2pcmdFormat equ $3** ProDOS A register return codes*pdSuccess equ 0pdIoErr equ $27pdNoDevCon equ $28pdWriteProt equ $2B** ProDOS ROM code calling conventions (Tech Ref 6.3.1)* Call Parameters (6.3.2)*pdCommand equ $42pdUnitNum equ $43pdBuffer equ $44pdBlock equ $46** equates*blockL equ 0blockH equ 1status equ 2maxL equ 3maxH equ 4buffer equ $9000 ORG $300start equ * lda #pcmdRead sta pdCommand lda #$70 sta pdUnitNum lda #<buffer sta pdBuffer lda #>buffer sta pdBuffer lda blockL sta pdBlock lda blockH sta pdBlock+1 lda $C7FF sta callBIO+1callBIO jsr $C700 sta status stx maxL sty maxH rts