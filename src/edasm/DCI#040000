** equates*chrA equ $C1chr0 equ $B0column equ $24row equ $25textPtr equ $E0 ; $E0-$E1 used for DCI printescape equ 155 ; escape keykeyPress equ $C000kbdStrobe equ $C010home equ $FC58charOut equ $FDEDprErr equ $FF2D* org $300 lda #0 jsr printHex lda #$19 jsr printHex lda #$AF jsr printHex jsr printDci dci "Just testing" lda #99 jsr printHex rts ** Prints a DCI string*printDci equ * lda #0 sta textPtr pla tay pla sta textPtr+1dciLoop iny bne nextChar inc textPtr+1nextChar lda (textPtr),y php ora #$80 jsr charOut plp bpl dciLoop lda textPtr+1 pha tya pha rts** Prints A as HEX*printHex equ * pha lsr a lsr a lsr a lsr a jsr printNib plaprintNib equ * and #$0F cmp #10 bcc p0to9 adc #chrA-11 ; A-F jmp charOutp0to9 equ * adc #chr0 ; 0-9 jmp charOut